[user]
	name  = <Your Name>
	email = <Your Email>

[core]
  excludesfile = ~/.gitignore

[color]
  branch    = auto
  diff      = true
  status    = true
[color "branch"]
  current   = yellow reverse
  local     = yellow
  remote    = green
[color "diff"]
  meta      = yellow bold
  frag      = magenta bold
  old       = red bold
  new       = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[alias]
  a         =      add
  aa        =      add .
  b         =      branch
  c         =      config
  ca        =      commit -v --all
  ci        =      commit -v --interactive
  co        =      checkout
  cb        =      checkout -b
  d         =      diff
  dd        = !git diff | less
  di        =      diff HEAD
  e         =      reset
  ee        =      reset --soft HEAD^
  f         =      fetch
  g         =      grep -E -n
  h         =      help
  l         = !git log --reverse -10 --pretty=format:\"%Cblue%h %Cgreen%an %Cred%ad %Creset- %s\" | sed 'a\\'
  ll        =      log --reverse -10
  lp        = !git log --reverse -10 -p | less
  la        = !git log | less
  lv        = !git log -p | less
  lc        =      whatchanged --reverse -10
  lf        = !git whatchanged | less
  m         =      merge
  o         =      remote
  p         =      push
  pa        = !git remote | xargs git push
  s         =      status
  u         =      pull
  v         =      revert
  w         =      show --pretty=fuller
  x         =      commit -v -a --amend
  z         =      checkout-index -u -f
  zz        =      checkout -f
